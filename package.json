{
  "name": "test-parcel-vue-ts-babel-template",
  "version": "1.0.0",
  "description": "Тестовый шаблон с использованием Parcel, Vue, TypeScript и Babel",
  "main": "./src/index.ts",
  "scripts": {
    "clean": "rimraf ./{.cache,dist}/*",
    "prettier:check": "tslint-config-prettier-check ./tslint.json",
    "prettier:watch": "onchange . -- prettier --write {{changed}}",
    "prettier:write": "prettier ./{test,src}/**/*.{ts,tsx,vue} --write",
    "tslint:fix": "tslint ./{test,src}/**/*.{ts,tsx} --fix",
    "prelint": "yarn prettier:check && yarn prettier:write",
    "lint": "yarn tslint:fix",
    "preserve": "yarn clean",
    "serve": "parcel ./public/index.html --no-source-maps --port 8080 --open",
    "test": "",
    "prebuild": "yarn clean && yarn lint",
    "build": "parcel build ./public/index.html --public-url . --no-cache --experimental-scope-hoisting"
  },
  "keywords": [
    "parcel",
    "vue",
    "typescript",
    "babel",
    "prettier",
    "tslint"
  ],
  "repository": "https://github.com/newbornfrontender/test-parcel-vue-ts-babel-template.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@vue/component-compiler-utils": "^2.1.0",
    "vue": "^2.5.17",
    "vue-class-component": "^6.2.0",
    "vue-hot-reload-api": "^2.3.0",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.5.7",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.2",
    "onchange": "^4.1.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "1.14.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.1.0-dev.20180807",
    "vue-template-compiler": "^2.5.17"
  }
}

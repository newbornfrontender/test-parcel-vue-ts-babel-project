{
  "name": "test-parcel-vue-ts-babel-template",
  "version": "1.0.0",
  "description": "Тестовый шаблон с использованием Parcel, Vue, TypeScript и Babel",
  "main": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf ./.cache/*  && rm -rf ./lib/* && rm -rf ./dist/*",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "tslint:lint": "tslint \"./{test,src}/**/*.{ts,tsx}\"",
    "lint": "yarn tslint:check && yarn tslint:lint",
    "preserve": "yarn clean",
    "serve": "parcel ./public/index.html --no-source-maps --port 2018 --open",
    "test:unit": "",
    "tests": "yarn test:unit",
    "prebuild": "yarn clean && yarn lint",
    "build": "parcel build ./public/index.html --public-url . --no-cache --experimental-scope-hoisting"
  },
  "keywords": [
    "parcel",
    "vue",
    "typescript",
    "babel"
  ],
  "repository": "https://github.com/newbornfrontender/test-parcel-vue-ts-babel-template.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@vue/component-compiler-utils": "^2.1.0",
    "vue": "^2.5.17",
    "vue-class-component": "^6.2.0",
    "vue-hot-reload-api": "^2.3.0",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.5.6",
    "node-sass": "^4.9.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1",
    "vue-template-compiler": "^2.5.17"
  }
}

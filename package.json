{
  "name": "test-parcel-vue-ts-project",
  "version": "1.0.0",
  "description": "Тестовый проект с использованием Parcel, Vue, TypeScript",
  "main": "public/index.html",
  "scripts": {
    "clean": "rm -rf ./.cache/ && rm -rf ./dist/",
    "preserve": "npm run clean",
    "serve": "parcel ./public/index.html --public-url ./dist/ --no-source-maps --https --port 2018 --open",
    "prebuild": "npm run clean",
    "build": "parcel build ./public/index.html --public-url . --no-cache --experimental-scope-hoisting"
  },
  "keywords": [
    "parcel",
    "vue",
    "typescript"
  ],
  "repository": "https://github.com/newbornfrontender/test-parcel-vue-ts-project.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@vue/component-compiler-utils": "^2.1.0",
    "vue": "^2.5.17",
    "vue-class-component": "^6.2.0",
    "vue-hot-reload-api": "^2.3.0",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.5.6",
    "@vue/test-utils": "^1.0.0-beta.23",
    "jest": "^23.4.2",
    "jest-serializer-vue": "^2.0.2",
    "node-sass": "^4.9.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.0.1",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.5.17"
  }
}

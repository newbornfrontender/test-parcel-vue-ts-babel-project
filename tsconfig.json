{
  "compilerOptions": {
    /* Basic Options */
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    // "declaration": true,
    // "declarationMap": true,
    "sourceMap": true,
    // "outDir": "./dist",
    // "removeComments": true,
    "importHelpers": true,
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    /* Strict Type-Checking Options */
    // "alwaysStrict": true,
    "strict": true,
    /* Additional Checks */
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "./src/typings",
    //   "./test/unit/jest/typings"
    // ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    /* Advanced Options */
    // "declarationDir": "./lib",
    /* Other */
    "newLine": "CRLF",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
